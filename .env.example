# Configuración del Sistema Electoral ERP

# Entorno de ejecución
FLASK_ENV=development

# Base de datos
DATABASE_URL=sqlite:///caqueta_electoral.db
# Para PostgreSQL en producción:
# DATABASE_URL=postgresql://username:password@localhost:5432/electoral_db

# Seguridad
SECRET_KEY=change-this-secret-key-in-production
JWT_SECRET_KEY=change-this-jwt-secret-in-production
JWT_EXPIRES_HOURS=24

# CORS (separar múltiples orígenes con comas)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Servidor
HOST=0.0.0.0
PORT=5000

# Logging
LOG_LEVEL=INFO
LOG_FILE=electoral_system.log

# Paginación
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Archivos
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB en bytes

# Cache
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Email (para notificaciones)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Configuración específica del sistema electoral
MAX_CANDIDATES_PER_ELECTION=1000
MAX_PARTIES=50
MAX_COALITIONS=20
ENABLE_REAL_TIME_UPDATES=true
BACKUP_INTERVAL_HOURS=6
SESSION_TIMEOUT_MINUTES=60

# Redis (para cache y tareas en background)
REDIS_URL=redis://localhost:6379/0

# Monitoreo
ENABLE_METRICS=true
METRICS_PORT=9090